        inset 0 1px 0 rgba(255, 255, 255, 0.2),
        inset 0 -1px 0 rgba(28, 115, 244, 0.2);
    position: relative;
    z-index: 2;
    overflow: hidden;
}

.step-number::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 50%;
    background: radial-gradient(ellipse at top, rgba(255, 255, 255, 0.15) 0%, transparent 70%);
    border-radius: 50% 50% 0 0;
}

.flow-step:not(:last-child)::after {
    content: '';
    position: absolute;
    top: 30px;
    left: calc(50% + 30px);
    right: calc(-50% + 30px);
    height: 3px;
    background: linear-gradient(90deg, 
        rgba(28, 115, 244, 0.8) 0%, 
        rgba(28, 115, 244, 0.4) 50%, 
        rgba(28, 115, 244, 0.8) 100%);
