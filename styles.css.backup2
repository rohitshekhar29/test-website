/* Animations */
@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.fade-in {
    animation: fadeInUp 0.8s ease forwards;
}

/* Smooth scrolling */
html {
    scroll-behavior: smooth;
}

/* Loading states */
.loading {
    opacity: 0.6;
    pointer-events: none;
}



/* Faster Resolution Section */
.faster-resolution-section {
    padding: 2rem 0;
    background: transparent;
    position: relative;
    z-index: 1;
    overflow: hidden;
}

/* Enhanced Resolution Section Styles */
.faster-resolution-header {
    max-width: 1200px;
    margin: 0 auto 1.5rem auto;
    padding: 0 2rem;
}

.faster-resolution-title {
    font-size: 2rem;
    font-weight: 700;
    color: var(--text-heading);
    margin: 0 0 0.75rem 0;
    letter-spacing: -0.02em;
    line-height: 1.2;
}

.faster-resolution-subtitle {
    font-size: 1rem;
    color: #9ca3af;
    max-width: 600px;
    margin: 0;
    line-height: 1.5;
}

.resolution-comparison-grid {
    max-width: 1200px;
    margin: 0 auto 1rem auto;
    padding: 0 2rem;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
}

.resolution-column {
    border-radius: 0.75rem;
    padding: 1rem;
    position: relative;
    overflow: hidden;
    height: fit-content;
}

.resolution-column.without-chiron {
    background: #1a1a1a;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
    border: 1px solid #2a2a2a;
}

.resolution-column.with-chiron {
    background: #1a1a1a;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
    border: 1px solid #2a2a2a;
}

.decorative-element {
    position: absolute;
    top: -50px;
    right: -50px;
    width: 200px;
    height: 200px;
    background: rgba(59, 130, 246, 0.2);
    border-radius: 50%;
    filter: blur(40px);
}

.resolution-column-header {
    margin-bottom: 0.75rem;
    position: relative;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.header-content {
    display: flex;
    align-items: center;
    gap: 1rem;
    width: 100%;
}

.resolution-column-title {
    font-size: 1rem;
    font-weight: 600;
    color: var(--text-heading);
    margin: 0;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

/* Timeline Container */
.timeline-container {
    width: 100%;
    margin: 1.5rem 0;
    padding: 1rem;
    background: rgba(255, 255, 255, 0.02);
    border-radius: 0.75rem;
    border: 1px solid rgba(255, 255, 255, 0.05);
}

.timeline-container.compact {
    margin: 0;
    padding: 0;
    background: transparent;
    border: none;
    width: 150px;
    flex-shrink: 0;
}

.timeline-container.compact:has(.timeline-track.green) .timeline-track {
    background: rgba(0, 0, 0, 0.6);
    border: 1px solid rgba(255, 255, 255, 0.2);
    height: 6px;
}

.timeline-container.compact .timeline-track {
    height: 6px;
    margin-bottom: 0.5rem;
    background: rgba(255, 255, 255, 0.2);
    border: 1px solid rgba(255, 255, 255, 0.15);
}

.timeline-container.compact .timeline-marker {
    top: -6px;
}

.timeline-container.compact .timeline-marker::before {
    height: 12px;
}

.timeline-container.compact .timeline-marker.end::before {
    height: 14px;
}

.timeline-container.compact .timeline-marker span {
    font-size: 0.625rem;
    padding: 0.125rem 0.25rem;
}

.timeline-label {
    font-size: 0.75rem;
    font-weight: 600;
    text-align: center;
    margin-top: 0.25rem;
    color: var(--text-muted-80);
}

.timeline-container.compact .timeline-label {
    font-size: 0.6875rem;
    margin-top: 0.125rem;
}

.timeline-container.compact:has(.timeline-track.green) .timeline-label {
    color: #10b981;
    font-weight: 700;
}

.timeline-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
}

.timeline-title {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--text-muted-80);
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.timeline-duration {
    font-size: 1.125rem;
    font-weight: 700;
    padding: 0.25rem 0.75rem;
    border-radius: 0.5rem;
    backdrop-filter: blur(10px);
}

.timeline-container:has(.timeline-track.red) .timeline-duration {
    color: #ef4444;
    background: rgba(239, 68, 68, 0.1);
    border: 1px solid rgba(239, 68, 68, 0.3);
}

.timeline-container:has(.timeline-track.green) .timeline-duration {
    color: #10b981;
    background: rgba(16, 185, 129, 0.1);
    border: 1px solid rgba(16, 185, 129, 0.3);
}

.timeline-track {
    position: relative;
    height: 8px;
    background: rgba(255, 255, 255, 0.15);
    border-radius: 4px;
    overflow: hidden;
    margin-bottom: 1.5rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.timeline-fill {
    height: 100%;
    border-radius: 4px;
    transition: width 2.5s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    animation: timelineFill 2.5s cubic-bezier(0.4, 0, 0.2, 1) forwards;
}

.timeline-track.red .timeline-fill {
    background: linear-gradient(90deg, #ef4444, #dc2626);
    box-shadow: 0 0 8px rgba(239, 68, 68, 0.6);
    border: 1px solid rgba(239, 68, 68, 0.8);
}

.timeline-track.green .timeline-fill {
    background: linear-gradient(90deg, #10b981, #059669);
    box-shadow: 0 0 12px rgba(16, 185, 129, 0.8);
    border: 2px solid #10b981;
    animation: pulseGreen 2s ease-in-out infinite;
    height: 6px;
}

@keyframes pulseGreen {
    0%, 100% { 
        box-shadow: 0 0 12px rgba(16, 185, 129, 0.8);
        transform: scaleY(1);
    }
    50% { 
        box-shadow: 0 0 20px rgba(16, 185, 129, 1);
        transform: scaleY(1.2);
    }
}

@keyframes timelineFill {
    0% { width: 0%; }
    100% { width: 100%; }
}

.timeline-markers {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 100%;
    pointer-events: none;
}

.timeline-marker {
    position: absolute;
    top: -8px;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    z-index: 2;
}

.timeline-marker::before {
    content: '';
    width: 1px;
    height: 16px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 1px;
    margin-bottom: 0.25rem;
}

.timeline-marker.end::before {
    background: rgba(255, 255, 255, 0.4);
    width: 2px;
    height: 18px;
}

.timeline-marker span {
    font-size: 0.6875rem;
    font-weight: 500;
    color: var(--text-muted-70);
    background: rgba(0, 0, 0, 0.4);
    padding: 0.125rem 0.25rem;
    border-radius: 0.25rem;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.05);
    white-space: nowrap;
    transition: all 0.3s ease;
}

.timeline-marker:hover span {
    background: rgba(0, 0, 0, 0.8);
    transform: scale(1.1);
    color: var(--text-heading);
}

.timeline-track.red .timeline-marker span {
    color: #fca5a5;
    border-color: rgba(239, 68, 68, 0.3);
}

.timeline-track.green .timeline-marker span {
    color: #6ee7b7;
    border-color: rgba(16, 185, 129, 0.3);
}

/* Hover effects */
.timeline-track:hover .timeline-fill {
    transform: scaleY(1.2);
    transition: transform 0.3s ease;
}

.timeline-track:hover .timeline-marker::before {
    background: rgba(255, 255, 255, 0.6);
    transition: all 0.3s ease;
}

