}

.alert-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
}

.alert-icon {
    font-size: 1.5rem;
}

.alert-title {
    font-weight: 600;
    color: var(--text-heading);
