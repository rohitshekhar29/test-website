        0 12px 32px rgba(28, 115, 244, 0.25),
        0 6px 16px rgba(34, 211, 238, 0.15),
        0 4px 12px rgba(0, 0, 0, 0.3);
    white-space: nowrap;
    backdrop-filter: blur(15px);
    position: relative;
    overflow: hidden;
