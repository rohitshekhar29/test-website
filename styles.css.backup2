}

.path-item {
    padding: 0.25rem 0.75rem;
    border-radius: 6px;
    font-size: 0.8rem;
    font-weight: 500;
}

.path-item.error {
    background: rgba(239, 68, 68, 0.2);
    color: #fca5a5;
}

.path-item.warning {
    background: rgba(245, 158, 11, 0.2);
    color: #fbbf24;
}

.path-item.impact {
    background: rgba(220, 38, 38, 0.2);
    color: #f87171;
}

.path-arrow {
    color: rgba(255, 255, 255, 0.4);
