
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

:root {
    /* Professional Dark-First Observability Theme */
    
    /* Brand Core - Dark First */
    --bg-primary: #0f0f13;           /* Near-black blue background */
    --surface-primary: #1c1d21;      /* Cards/nav surface */
    --surface-elevated: #1c1d21;     /* Hover/modals */
    --input-bg: #1c1d21;            /* Input backgrounds */
    
    /* Primary & Accents */
    --primary-blue: #1c73f4;         /* Primary blue (Blue-500) */
    --primary-hover: #1c73f4;        /* Primary hover state */
    --accent-cyan: #22d3ee;          /* Streaming/correlation accent (Cyan-400) */
    --success: #10B981;              /* Success green */
    --warning: #F59E0B;              /* Warning amber */
    --danger: #EF4444;               /* Danger red */
    
    /* Text Hierarchy */
    --text-heading: #ffffff;         /* Headings */
    --text-body: #ffffff;            /* Body text */
    --text-muted: #a3a3b4;           /* Muted/captions */
    --text-accent: #ffffff;          /* Accent text for cards */
    --text-card-body: #a3a3b4;       /* Card body text */
    --text-link: #1c73f4;            /* Links */
    --text-link-visited: #1c73f4;    /* Visited links */
    --text-footer: #a3a3b4;          /* Footer text */
    --text-footer-link: #1c73f4;     /* Footer links */
    
    /* Borders & Dividers */
    --border-soft: #a3a3b4;          /* Soft borders */
    --border-subtle: #a3a3b4;        /* Subtle dividers */
    --border-focus: #1c73f4;         /* Focus borders */
    --border-primary: rgba(28, 115, 244, 0.3);
    --border-primary-hover: rgba(28, 115, 244, 0.6);
    
    /* Opacity Variants */
    --text-muted-60: rgba(255, 255, 255, 0.6);
    --text-muted-70: rgba(255, 255, 255, 0.7);
    --text-muted-80: rgba(255, 255, 255, 0.8);
    --text-muted-90: rgba(255, 255, 255, 0.9);
    --text-muted-95: rgba(255, 255, 255, 0.95);
    
    /* States & Interactive */
    --input-border: #a3a3b4;         /* Input borders */
    --input-border-focus: #1c73f4;   /* Input focus borders */
    --focus-ring: #1c73f4;           /* Focus ring color */
    
    /* Component-Specific Colors */
    --surface-card: #1c1d21;         /* Card backgrounds */
    --surface-team-tile: #1c1d21;    /* Team logo tiles */
    --surface-table-alt: #1c1d21;    /* Alternating table rows */
    --surface-table-row: #1c1d21;    /* Table rows */
    --table-header: #ffffff;         /* Table headers */
    --table-separator: #a3a3b4;      /* Table separators */
    
    /* Legacy Support (for existing components) */
    --primary-dark: #0f0f13;         /* Main background */
    --secondary-dark: #1c1d21;       /* Secondary surfaces */
    --card-dark: #1c1d21;            /* Card backgrounds */
    --surface-dark: #1c1d21;         /* Dark surfaces */
    --text-primary: #ffffff;         /* Primary text */
    --text-secondary: #a3a3b4;       /* Secondary text */
    --border-color: #a3a3b4;         /* Default borders */
    --border-light: #a3a3b4;         /* Light borders */
    --border-accent: #1c73f4;        /* Accent borders */
    
    /* Syntax highlighting for code blocks */
    --syntax-blue: #1c73f4;          /* Functions, keywords */
    --syntax-orange: #F59E0B;        /* Variables, properties */
    --syntax-green: #10B981;         /* Strings, comments */
    --syntax-purple: #A855F7;        /* Types, classes */
    --syntax-red: #EF4444;           /* Errors, warnings */
    --syntax-cyan: #1c73f4;          /* Special keywords/streaming */
    
    /* Glass morphism - dark theme */
    --glass-bg: rgba(28, 29, 33, 0.8);
    --glass-border: rgba(163, 163, 180, 0.5);
    
    /* Professional gradients */
    --gradient-primary: #c2595c;
    --gradient-hero-cta: #c2595c;
    --gradient-surface: linear-gradient(135deg, #1c1d21, #0f0f13);
    --gradient-hero: linear-gradient(135deg, #0f0f13 0%, #1c1d21 50%, #0f0f13 100%);
    --gradient-dark: linear-gradient(135deg, #0f0f13, #1c1d21);
    
    /* Spacing */
    --spacing-xs: 0.5rem;
    --spacing-sm: 1rem;
    --spacing-md: 1.5rem;
    --spacing-lg: 2rem;
    --spacing-xl: 3rem;
    --spacing-2xl: 4rem;
    --spacing-3xl: 6rem;
    
    /* Typography - Professional Stack */
    --font-heading: 'Inter', 'SF Pro Display', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    --font-body: 'Inter', 'SF Pro Text', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    --font-mono: 'JetBrains Mono', 'Fira Code', 'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, 'Courier New', monospace;
    --font-code: 'JetBrains Mono', 'Fira Code', 'SF Mono', Monaco, monospace;
    
    /* Font Weights */
    --font-weight-light: 300;
    --font-weight-normal: 400;
    --font-weight-medium: 500;
    --font-weight-semibold: 600;
    --font-weight-bold: 700;
    
    /* Font Sizes - Modular Scale */
    --font-size-xs: 0.75rem;     /* 12px */
    --font-size-sm: 0.875rem;    /* 14px */
    --font-size-base: 1rem;      /* 16px */
    --font-size-lg: 1.125rem;    /* 18px */
    --font-size-xl: 1.25rem;     /* 20px */
    --font-size-2xl: 1.5rem;     /* 24px */
    --font-size-3xl: 1.875rem;   /* 30px */
    --font-size-4xl: 2.25rem;    /* 36px */
    --font-size-5xl: 3rem;       /* 48px */
    --font-size-6xl: 3.75rem;    /* 60px */
    
    /* Line Heights */
    --line-height-tight: 1.25;
    --line-height-snug: 1.375;
    --line-height-normal: 1.5;
    --line-height-relaxed: 1.625;
    --line-height-loose: 2;
    
    /* Professional shadows - optimized for dark theme */
    --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.25);
    --shadow-md: 0 4px 6px rgba(0, 0, 0, 0.3);
    --shadow-lg: 0 10px 15px rgba(0, 0, 0, 0.4);
    --shadow-xl: 0 20px 25px rgba(0, 0, 0, 0.5);
    --shadow-glow: 0 0 0 2px rgba(28, 115, 244, 0.3), 0 0 20px rgba(28, 115, 244, 0.1);
    --shadow-focus: 0 0 0 2px var(--focus-ring);
    --shadow-inset: inset 0 2px 4px rgba(0, 0, 0, 0.3);
    
    /* Border radius */
    --radius-sm: 6px;
    --radius-md: 12px;
    --radius-lg: 16px;
}

body {
    font-family: var(--font-body);
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-normal);
    line-height: var(--line-height-normal);
    background: var(--bg-primary);
    color: var(--text-body);
    overflow-x: hidden;
    min-height: 100vh;
    padding-top: 0;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-rendering: optimizeLegibility;
    position: relative;
}

/* Global background effect */
body::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
        radial-gradient(circle at 20% 30%, rgba(28, 115, 244, 0.06) 0%, transparent 50%),
        radial-gradient(circle at 80% 70%, rgba(28, 115, 244, 0.04) 0%, transparent 50%),
        radial-gradient(circle at 50% 50%, rgba(16, 185, 129, 0.02) 0%, transparent 60%);
    z-index: 0;
    pointer-events: none;
}

body::after {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
        linear-gradient(90deg, rgba(255, 255, 255, 0.02) 1px, transparent 1px),
        linear-gradient(rgba(255, 255, 255, 0.02) 1px, transparent 1px);
    background-size: 50px 50px;
    opacity: 0.4;
    z-index: 0;
    pointer-events: none;
}

/* Typography System */
h1, h2, h3, h4, h5, h6 {
    font-family: var(--font-heading);
    font-weight: var(--font-weight-bold);
    line-height: var(--line-height-tight);
    color: var(--text-heading);
    margin: 0;
    letter-spacing: -0.02em;
}

h1 {
    font-size: var(--font-size-5xl);
    font-weight: var(--font-weight-bold);
    line-height: var(--line-height-tight);
}

h2 {
    font-size: var(--font-size-4xl);
    font-weight: var(--font-weight-bold);
    line-height: var(--line-height-tight);
}

h3 {
    font-size: var(--font-size-3xl);
    font-weight: var(--font-weight-semibold);
    line-height: var(--line-height-snug);
}

h4 {
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-semibold);
    line-height: var(--line-height-snug);
}

h5 {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-medium);
    line-height: var(--line-height-normal);
}

h6 {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-medium);
    line-height: var(--line-height-normal);
}

p {
    font-size: var(--font-size-base);
    line-height: var(--line-height-relaxed);
    color: var(--text-body);
    margin: 0 0 1rem 0;
}

/* Typography Utilities */
.text-xs { font-size: var(--font-size-xs); }
.text-sm { font-size: var(--font-size-sm); }
.text-base { font-size: var(--font-size-base); }
.text-lg { font-size: var(--font-size-lg); }
.text-xl { font-size: var(--font-size-xl); }
.text-2xl { font-size: var(--font-size-2xl); }
.text-3xl { font-size: var(--font-size-3xl); }
.text-4xl { font-size: var(--font-size-4xl); }
.text-5xl { font-size: var(--font-size-5xl); }
.text-6xl { font-size: var(--font-size-6xl); }

.font-light { font-weight: var(--font-weight-light); }
.font-normal { font-weight: var(--font-weight-normal); }
.font-medium { font-weight: var(--font-weight-medium); }
.font-semibold { font-weight: var(--font-weight-semibold); }
.font-bold { font-weight: var(--font-weight-bold); }

.leading-tight { line-height: var(--line-height-tight); }
.leading-snug { line-height: var(--line-height-snug); }
.leading-normal { line-height: var(--line-height-normal); }
.leading-relaxed { line-height: var(--line-height-relaxed); }
.leading-loose { line-height: var(--line-height-loose); }

/* Code and Monospace */
code, pre, .code {
    font-family: var(--font-mono);
    font-size: var(--font-size-sm);
    line-height: var(--line-height-normal);
}

/* Links */
a {
    color: var(--text-link);
    text-decoration: none;
    transition: color 0.2s ease;
}

a:hover {
    color: var(--primary-blue);
    text-decoration: underline;
}

/* Focus styles for accessibility */
*:focus {
    outline: 2px solid var(--primary-blue);
    outline-offset: 2px;
}

/* Container */
.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--spacing-lg);
}

.container-wide {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 4rem;
    width: 100%;
}

/* Navigation */
.nav {
    position: fixed;
    top: 0;
    width: 100%;
    background: rgba(15, 15, 19, 0.95);
    backdrop-filter: blur(24px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4), 0 2px 8px rgba(0, 0, 0, 0.2);
    z-index: 1000;
    transition: all 0.3s ease;
}

.nav-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
}

.nav-left {
    display: flex;
    align-items: center;
    gap: 2.5rem;
}

.nav-right {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-left: auto;
    flex-shrink: 0;
}

.nav-right .btn-primary {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.625rem 1.25rem;
    font-size: 0.875rem;
    font-weight: 600;
    text-decoration: none;
    border-radius: 8px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    letter-spacing: 0.025em;
    text-transform: none;
}

.nav-logo {
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
    text-decoration: none;
    color: var(--text-heading);
}

.nav-logo img {
    width: 32px;
    height: 32px;
}

.nav-logo-text {
    font-family: var(--font-heading);
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--text-heading);
    letter-spacing: -0.01em;
}

.nav-menu {
    display: flex;
    list-style: none;
    gap: 2rem;
    margin: 0;
    padding: 0;
}

.nav-link {
    color: var(--text-muted-95);
    text-decoration: none;
    font-weight: 500;
    font-size: 0.95rem;
    transition: all 0.3s ease;
    position: relative;
    padding: 0.75rem 1rem;
    border-radius: 8px;
    letter-spacing: 0.025em;
}

.nav-link:hover {
    color: var(--primary-blue);
    background: rgba(28, 115, 244, 0.1);
    transform: translateY(-1px);
}

.nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--gradient-accent);
    transition: width 0.3s ease;
    border-radius: 1px;
}

.nav-link:hover::after {
    width: 100%;
}

/* Buttons */
.btn {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-xs);
    padding: var(--spacing-xs) var(--spacing-md);
    border-radius: var(--radius-sm);
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
    transition: all 0.3s ease;
    border: 2px solid transparent;
    cursor: pointer;
    white-space: nowrap;
}

.btn-primary {
    background: var(--gradient-primary);
    color: white;
    border: 1px solid rgba(28, 115, 244, 0.4);
    backdrop-filter: blur(12px);
    box-shadow: 0 4px 16px rgba(28, 115, 244, 0.25), inset 0 1px 0 rgba(255, 255, 255, 0.15);
    position: relative;
    overflow: hidden;
}

.btn-primary:hover {
    background: var(--gradient-secondary);
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(28, 115, 244, 0.4), inset 0 1px 0 rgba(255, 255, 255, 0.2);
    border-color: var(--border-primary-hover);
}

.btn-primary::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
}

.btn-secondary::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(28, 115, 244, 0.4), transparent);
}

.btn-secondary {
    background: rgba(28, 115, 244, 0.1);
    color: var(--primary-blue);
    border: 1px solid rgba(28, 115, 244, 0.3);
    backdrop-filter: blur(10px);
    box-shadow: 0 2px 8px rgba(28, 115, 244, 0.1), inset 0 1px 0 rgba(255, 255, 255, 0.05);
    position: relative;
    overflow: hidden;
}

.btn-secondary:hover {
    border-color: rgba(28, 115, 244, 0.5);
    color: var(--text-heading);
    background: rgba(28, 115, 244, 0.2);
    box-shadow: 0 4px 16px rgba(28, 115, 244, 0.2), inset 0 1px 0 rgba(255, 255, 255, 0.1);
    transform: translateY(-1px);
}

/* Hero Section */
.hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding: 120px 0 60px 0; /* Increased top padding for navbar clearance, reduced bottom padding */
    position: relative;
    overflow: visible; /* Allow trusted section to be visible */
    background: transparent;
    width: 100%;
    margin: 0;
    z-index: 1;
}

.hero::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 200px;
    background: linear-gradient(to bottom, transparent 0%, rgba(15, 15, 19, 0.6) 70%, rgba(15, 15, 19, 0.9) 90%, rgba(15, 15, 19, 1) 100%);
    pointer-events: none;
    z-index: 1;
}

.hero-background {
    display: none; /* Using global background instead */
}

.hero-gradient {
    display: none; /* Using global background instead */
}

.hero-pattern {
    display: none; /* Using global background instead */
}

.hero-content-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    position: relative;
    z-index: 1;
    width: 100%;
    max-width: 100%;
    padding: 0;
    margin: 0;
    min-height: 80vh;
    gap: 3rem;
}

.hero-text {
    max-width: 100%;
    width: 100%;
    padding: 0;
    text-align: center;
}

.hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    background: rgba(28, 115, 244, 0.1);
    border: 1px solid rgba(28, 115, 244, 0.3);
    border-radius: 50px;
    padding: 0.75rem 1.5rem;
    margin-bottom: 2rem;
    backdrop-filter: blur(10px);
    transition: all 0.3s ease;
    animation: slideInUp 0.8s ease 0s forwards;
}

.hero-badge:hover {
    background: rgba(28, 115, 244, 0.15);
    border-color: var(--border-primary);
    transform: translateY(-1px);
}

.badge-dot {
    width: 8px;
    height: 8px;
    background: linear-gradient(135deg, #1c73f4, #22d3ee);
    border-radius: 50%;
    animation: pulse 2s infinite;
}

@keyframes pulse {
    0%, 100% {
        transform: scale(1);
        opacity: 1;
    }
    50% {
        transform: scale(1.2);
        opacity: 0.8;
    }
}

@keyframes slideInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.badge-text {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--primary-blue);
    letter-spacing: 0.025em;
}

.gradient-text {
    background: linear-gradient(135deg, #1c73f4, #22d3ee);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.hero-stats {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 2rem;
    margin-top: 2rem;
    padding: 2rem;
    background: rgba(28, 29, 33, 0.4);
    border: 1px solid rgba(163, 163, 180, 0.2);
    border-radius: 16px;
    backdrop-filter: blur(10px);
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
}

.stat-item {
    text-align: center;
}

.stat-value {
    font-size: 2rem;
    font-weight: 800;
    color: var(--text-heading);
    line-height: 1;
    margin-bottom: 0.5rem;
    background: linear-gradient(135deg, #1c73f4, #22d3ee);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.stat-label {
    font-size: 0.85rem;
    color: var(--text-muted-70);
    font-weight: 500;
    letter-spacing: 0.025em;
}

.stat-divider {
    width: 1px;
    height: 50px;
    background: linear-gradient(to bottom, transparent, rgba(163, 163, 180, 0.3), transparent);
}

.companies-logos-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 1.5rem;
    max-width: 900px;
    margin: 0 auto;
}

@media (max-width: 768px) {
    .companies-logos-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
    }

    .hero-stats {
        flex-direction: column;
        gap: 1.5rem;
        padding: 1.5rem;
    }

    .stat-divider {
        width: 100%;
        height: 1px;
    }

    .hero-title {
        font-size: 2.5rem;
    }

    .hero-description {
        font-size: 1.125rem;
    }

    .hero-cta {
        flex-direction: column;
        width: 100%;
    }

    .btn-large {
        width: 100%;
        justify-content: center;
    }
}

.logo-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    padding: 1.5rem;
    background: rgba(28, 29, 33, 0.4);
    border: 1px solid rgba(163, 163, 180, 0.2);
    border-radius: 12px;
    backdrop-filter: blur(10px);
    transition: all 0.3s ease;
}

.logo-card:hover {
    transform: translateY(-4px);
    background: rgba(28, 29, 33, 0.6);
    border-color: rgba(28, 115, 244, 0.3);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
}

.company-logo {
    width: 80px;
    height: 80px;
    object-fit: cover;
    border-radius: 50%;
    border: 2px solid rgba(163, 163, 180, 0.2);
}

.company-name {
    font-size: 0.875rem;
    color: var(--text-muted-90);
    font-weight: 600;
    text-align: center;
}

/* Rotating Features - Clean Rewrite */
.hero-rotating-features {
    display: flex;
    flex-direction: column;
    gap: 0rem;
    margin-bottom: 1.5rem;
    opacity: 0;
    transform: translateY(20px);
    animation: slideInUp 0.8s ease 0.6s forwards;
}

.rotating-feature {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.25rem 0;
    font-size: 1rem;
    font-weight: 500;
    line-height: 1;
    transition: all 0.3s ease;
    cursor: pointer;
    border-radius: 8px;
    position: relative;
    min-height: 32px;
}

.rotating-feature:hover {
    transform: translateX(4px);
}

.rotating-feature.active {
    transform: translateX(8px);
}

.rotating-feature .feature-icon {
    width: 32px;
    height: 32px;
    background: rgba(28, 115, 244, 0.1);
    /* border: 1px solid rgba(28, 115, 244, 0.2); */
    border-radius: 8px;
    display: flex;
