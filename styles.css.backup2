}

.alert-time {
    margin-left: auto;
    color: rgba(255, 255, 255, 0.5);
    font-size: 0.9rem;
}

.alert-details {
    margin-bottom: 1rem;
}

.detail-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
}

.detail-row:last-child {
    border-bottom: none;
}

.detail-label {
    color: var(--text-muted-60);
    font-size: 0.9rem;
}

.detail-value {
    color: var(--text-heading);
