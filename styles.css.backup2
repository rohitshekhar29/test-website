}

/* AI Features */
.ai-features {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}

.ai-feature {
    display: flex;
    align-items: center;
    gap: 1rem;
}

.ai-icon {
    width: 40px;
    height: 40px;
    background: rgba(16, 185, 129, 0.1);
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;
    flex-shrink: 0;
}

.ai-text strong {
    display: block;
    color: var(--text-heading);
    font-weight: 600;
    margin-bottom: 0.25rem;
}

.ai-text span {
    color: var(--text-muted-70);
    font-size: 0.9rem;
    line-height: 1.5;
}

/* AI Terminal */
.ai-terminal {
    background: #0a0a0a;
    border-radius: 0.75rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
    overflow: hidden;
    font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Roboto Mono', monospace;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
}

.terminal-header {
    background: #1a1a1a;
    padding: 0.75rem 1rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.terminal-controls {
    display: flex;
    gap: 0.5rem;
}

.control-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
}

.control-dot.red {
    background: #ff5f56;
}

.control-dot.yellow {
    background: #ffbd2e;
}

.control-dot.green {
    background: #27ca3f;
}

.terminal-title {
    color: var(--text-muted-80);
    font-size: 0.875rem;
    font-weight: 500;
}

.terminal-content {
    padding: 1.5rem;
    background: #0a0a0a;
}

.terminal-line {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 0.5rem;
    line-height: 1.6;
}

.terminal-line:last-child {
    margin-bottom: 0;
}

.line-number {
    color: rgba(255, 255, 255, 0.4);
    font-size: 0.875rem;
    min-width: 1.5rem;
    text-align: right;
    user-select: none;
}

.terminal-text {
    color: var(--text-heading);
    font-size: 0.875rem;
    flex: 1;
    word-break: break-all;
}

.prompt {
    color: var(--primary-blue);
    font-weight: 700;
    margin-right: 0.75rem;
    font-size: 0.9rem;
}

.terminal-text.success {
    color: #10b981;
    font-weight: 600;
}

.terminal-text.info {
    color: #3b82f6;
    font-weight: 600;
}

.terminal-text.highlight {
    color: #f59e0b;
    font-weight: 700;
}

/* Command lines styling */
.terminal-line.command-line .terminal-text {
    color: #e2e8f0;
    font-weight: 600;
    font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Roboto Mono', monospace;
}

.terminal-line.command-line .prompt {
    color: #60a5fa;
    font-weight: 700;
}

/* Terminal Animation */
.terminal-line {
    opacity: 0;
    transform: translateX(-20px);
    animation: terminalSlideIn 0.6s ease forwards;
}

.terminal-line:nth-child(1) { animation-delay: 0.1s; }
.terminal-line:nth-child(2) { animation-delay: 0.3s; }
.terminal-line:nth-child(3) { animation-delay: 0.5s; }
.terminal-line:nth-child(4) { animation-delay: 0.7s; }
.terminal-line:nth-child(5) { animation-delay: 0.9s; }
.terminal-line:nth-child(6) { animation-delay: 1.1s; }
.terminal-line:nth-child(7) { animation-delay: 1.3s; }
.terminal-line:nth-child(8) { animation-delay: 1.5s; }
.terminal-line:nth-child(9) { animation-delay: 1.7s; }
.terminal-line:nth-child(10) { animation-delay: 1.9s; }

@keyframes terminalSlideIn {
    to {
        opacity: 1;
        transform: translateX(0);
    }
}

/* Integration Features */
.integration-features {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}

.integration-feature {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 0;
    background: none;
    border: none;
}

.feature-icon-small {
    width: 32px;
    height: 32px;
    background: rgba(28, 115, 244, 0.1);
    border: 1px solid rgba(28, 115, 244, 0.2);
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1rem;
    flex-shrink: 0;
    margin-top: 2px;
}

.feature-content {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.feature-content h4 {
    color: var(--text-heading);
    font-weight: 600;
    font-size: 1rem;
    margin: 0;
    letter-spacing: -0.01em;
}

.feature-content p {
    color: var(--text-muted-60);
    font-size: 0.875rem;
    line-height: 1.5;
    margin: 0;
}



/* Panel Visual */
.panel-visual {
    position: relative;
}

.visual-container {
    position: relative;
    border-radius: 8px;
    overflow: hidden;
    background: transparent;
    box-shadow: none;
    border: none;
}

.visual-image {
    width: 100%;
    height: 450px;
    object-fit: contain;
    display: block;
    border-radius: 8px;
}

/* Hero Architecture Image */
.hero-architecture-image {
    width: 95%;
    height: 650px;
    object-fit: cover;
    display: block;
    border-radius: 0;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    filter: drop-shadow(0 12px 40px rgba(28, 115, 244, 0.3));
    position: relative;
    z-index: 2;
    background: transparent;
    backdrop-filter: none;
    animation: floatImage 6s ease-in-out infinite;
    mask: none;
    -webkit-mask: none;
    margin: 0;
    padding: 0;
}

/* Video specific styling */
video.hero-architecture-image {
    width: 95%;
    border-radius: 8px;
    border: none;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.6),
                0 20px 60px rgba(28, 115, 244, 0.15),
                0 0 40px rgba(28, 115, 244, 0.2),
                inset 0 0 20px rgba(28, 115, 244, 0.1);
    height: 700px;
    object-fit: contain;
    margin: 0 2rem;
    padding: 0;
    position: relative;
}

video.hero-architecture-image::before {
    content: '';
    position: absolute;
    top: -10px;
    left: -10px;
    right: -10px;
    bottom: -10px;
    background: radial-gradient(ellipse at center, rgba(28, 115, 244, 0.15) 0%, rgba(28, 115, 244, 0.05) 50%, transparent 70%);
    border-radius: 12px;
    z-index: -1;
    pointer-events: none;
}

.hero-architecture-image:hover {
    transform: scale(1.02) translateY(-4px);
    filter: drop-shadow(0 20px 50px rgba(28, 115, 244, 0.4));
    box-shadow: 0 25px 80px rgba(28, 115, 244, 0.25);
    animation-play-state: paused;
}

video.hero-architecture-image:hover {
    transform: none;
    box-shadow: none;
}

.architecture-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
    z-index: 3;
    border-radius: 1rem;
    overflow: hidden;
}

.overlay-point {
    position: absolute;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    animation: float 3s ease-in-out infinite;
}

.overlay-point:nth-child(1) {
    animation-delay: 0s;
}

.overlay-point:nth-child(2) {
    animation-delay: 1s;
}

.overlay-point:nth-child(3) {
    animation-delay: 2s;
}

@keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
}

@keyframes floatImage {
    0%, 100% { 
        transform: translateY(0px) rotateX(2deg) rotateY(-1deg); 
    }
    50% { 
        transform: translateY(-15px) rotateX(3deg) rotateY(-2deg); 
    }
}

.point-dot {
    width: 14px;
    height: 14px;
    background: linear-gradient(135deg, #1c73f4, #22d3ee);
    border-radius: 50%;
    box-shadow: 
        0 0 0 4px rgba(28, 115, 244, 0.3),
        0 0 20px rgba(28, 115, 244, 0.4);
    animation: pulse-dot 2s infinite;
    position: relative;
}

.point-dot::before {
    content: '';
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: linear-gradient(135deg, #1c73f4, #22d3ee);
    border-radius: 50%;
    opacity: 0.3;
    animation: ripple 2s infinite;
}

@keyframes ripple {
    0% { transform: scale(1); opacity: 0.3; }
    100% { transform: scale(2); opacity: 0; }
}

.point-label {
    background: 
        linear-gradient(135deg, rgba(28, 115, 244, 0.15) 0%, rgba(34, 211, 238, 0.08) 50%, rgba(28, 115, 244, 0.12) 100%),
