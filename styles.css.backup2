    display: block;
    animation: fadeInUp 0.4s ease-out;
}

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.tab-card img,
.tab-card iframe {
    width: 100%;
    border-radius: var(--radius-md);
}

/* Team section */
.team-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-xl);
}

.founders-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-lg);
}

.team-member {
    text-align: center;
    position: relative;
}

.team-member .linkedin-link {
    margin-top: var(--spacing-sm);
    display: inline-flex;
    align-items: center;
    justify-content: center;
}

.avatar {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    margin-bottom: var(--spacing-sm);
    border: 1px solid #a3a3b4;
}

.avatar-large {
    width: 100px;
    height: 100px;
}


.founding-team-detailed {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--spacing-md);
}


.member-info h5 {
    margin: 0;
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--text-primary);
    font-family: var(--font-mono);
}

.member-info p {
    margin: 2px 0 0 0;
    font-family: var(--font-mono);
    font-weight: 500;
}

.company-logos {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: var(--spacing-lg);
    opacity: 0.9;
    margin: var(--spacing-xl) 0;
    padding: var(--spacing-lg);
    background: #1c1d21;
    border-radius: var(--radius-lg);
    border: 1px solid #a3a3b4;
}

.company-logos img {
    height: 45px;
    filter: none;
    transition: all 0.3s ease;
}

.company-logos img:hover {
    filter: none;
    transform: scale(1.1);
}

/* Solutions grid */
.solutions-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: var(--spacing-lg);
}

.solution-card {
    background: #1c1d21;
    border: 1px solid #a3a3b4;
    border-radius: var(--radius-lg);
    padding: var(--spacing-xl);
    border-left: 4px solid #1c73f4;
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
}

.solution-card::before {
    content: '';
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: var(--gradient-primary);
    border-radius: var(--radius-lg);
    opacity: 0;
    z-index: -1;
    transition: opacity 0.3s ease;
}

.solution-card:hover::before {
    opacity: 0.1;
}

.solution-card h3 {
    margin-bottom: var(--spacing-md);
    color: var(--text-primary);
}


.cta-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-xl);
    margin-top: var(--spacing-xl);
}

.cta-card {
    background: var(--gradient-surface);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-lg);
    padding: var(--spacing-xl);
    text-align: left;
    backdrop-filter: blur(10px);
    box-shadow: var(--shadow-lg);
    position: relative;
    z-index: 1;
}

.cta-steps {
    list-style: none;
    margin: var(--spacing-lg) 0;
}

.cta-steps li {
    display: flex;
    align-items: flex-start;
    gap: var(--spacing-sm);
    margin-bottom: var(--spacing-sm);
    color: var(--text-secondary);
}

.cta-steps li::before {
    content: '★';
    color: var(--accent-blue);
    font-weight: bold;
    margin-top: 2px;
}

/* Footer */
/* Footer - Professional Design */
.footer {
    background: transparent;
    padding: 6rem 0 2rem;
    position: relative;
    z-index: 1;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    overflow: hidden;
}

.footer::before {
    display: none; /* Using global background instead */
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
        radial-gradient(circle at 20% 20%, rgba(28, 115, 244, 0.03) 0%, transparent 60%),
        radial-gradient(circle at 80% 80%, rgba(34, 211, 238, 0.02) 0%, transparent 60%);
    pointer-events: none;
}

.footer-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
    position: relative;
    z-index: 1;
}

.footer-main {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 4rem;
    margin-bottom: 3rem;
}

.footer-brand {
    max-width: 400px;
}

.footer-logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1.5rem;
    text-decoration: none;
}

.footer-logo img {
    width: 36px;
    height: 36px;
    filter: brightness(0.9);
}

.footer-logo-text {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-heading);
    letter-spacing: 0.1em;
}

.footer-description {
    color: var(--text-muted-70);
    font-size: 1rem;
    line-height: 1.6;
    margin-bottom: 2rem;
    font-weight: 400;
}

.footer-social {
    display: flex;
    gap: 1rem;
}

.social-link {
    width: 44px;
    height: 44px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-muted-60);
    text-decoration: none;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
}

.social-link:hover {
    background: rgba(28, 115, 244, 0.1);
    border-color: var(--border-primary);
    color: var(--primary-blue);
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(28, 115, 244, 0.2);
}

.footer-links {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
}

.footer-column {
    display: flex;
    flex-direction: column;
}

.footer-heading {
    color: var(--text-heading);
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    letter-spacing: -0.01em;
    position: relative;
}

.footer-heading::after {
    content: '';
    position: absolute;
    bottom: -0.5rem;
    left: 0;
    width: 24px;
    height: 2px;
    background: var(--gradient-accent);
    border-radius: 1px;
}

.footer-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
}

.footer-list li {
    margin: 0;
}

.footer-list a {
    color: var(--text-muted-60);
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 400;
    transition: all 0.2s ease;
    position: relative;
    padding: 0.25rem 0;
}

.footer-list a:hover {
    color: var(--primary-blue);
    transform: translateX(4px);
}

.footer-list a::before {
    content: '';
    position: absolute;
    left: -8px;
    top: 50%;
    transform: translateY(-50%);
    width: 0;
    height: 1px;
    background: #1c73f4;
    transition: width 0.2s ease;
}

.footer-list a:hover::before {
    width: 4px;
}

.footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.08);
}

.footer-copyright p {
    color: rgba(255, 255, 255, 0.5);
    font-size: 0.875rem;
    margin: 0;
    font-weight: 400;
}

.footer-legal {
    display: flex;
    gap: 2rem;
}

.legal-link {
    color: rgba(255, 255, 255, 0.5);
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 400;
    transition: color 0.2s ease;
    position: relative;
}

.legal-link:hover {
    color: var(--primary-blue);
}

.legal-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 1px;
    background: #1c73f4;
    transition: width 0.2s ease;
}

.legal-link:hover::after {
    width: 100%;
}

/* Mobile menu */
.mobile-menu-button {
    display: none;
    background: none;
    border: none;
    color: var(--text-heading);
    cursor: pointer;
    padding: 0.5rem;
    border-radius: 0.375rem;
    transition: all 0.3s ease;
}

.mobile-menu-button:hover {
    background: rgba(255, 255, 255, 0.1);
}

.mobile-menu-button svg {
    width: 24px;
    height: 24px;
}

/* Mobile menu styles */
@media (max-width: 768px) {
    .nav-menu {
        position: fixed;
        top: 100%;
        left: 0;
        right: 0;
        background: rgba(15, 15, 19, 0.98);
        backdrop-filter: blur(20px);
        border-top: 1px solid rgba(163, 163, 180, 0.2);
        flex-direction: column;
        padding: 1rem;
        gap: 0;
        transform: translateY(-100%);
        opacity: 0;
        visibility: hidden;
        transition: all 0.3s ease;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    }
    
    .nav-menu.show {
        transform: translateY(0);
        opacity: 1;
        visibility: visible;
    }
    
    .nav-menu li {
        width: 100%;
    }
    
    .nav-link {
        display: block;
        padding: 1rem;
        text-align: center;
        border-radius: 0.5rem;
        margin-bottom: 0.25rem;
    }
    
    .nav-link:hover {
        background: rgba(28, 115, 244, 0.1);
        transform: none;
    }
}

