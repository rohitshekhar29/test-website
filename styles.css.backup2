/* Code Block Styles */
.code-block {
    background: #0a0a0a;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    margin: 2rem 0;
    overflow: hidden;
    position: relative;
    flex: 1;
    display: flex;
    flex-direction: column;
}

.code-header {
    background: #1a1a1a;
    padding: 1rem 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
}

.code-tabs {
    display: flex;
    gap: 1rem;
}

.code-tab {
    padding: 0.5rem 1rem;
    background: transparent;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    color: var(--text-muted-60);
    font-size: 0.875rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
}

.code-tab.active {
    background: rgba(28, 115, 244, 0.1);
    border-color: var(--border-primary);
    color: var(--primary-blue);
}

.code-actions {
    display: flex;
    gap: 0.5rem;
}

.copy-btn {
    background: transparent;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 6px;
    padding: 0.5rem;
    color: var(--text-muted-60);
    cursor: pointer;
    transition: all 0.2s ease;
}

.copy-btn:hover {
    background: rgba(28, 115, 244, 0.1);
    border-color: var(--border-primary);
    color: var(--primary-blue);
}

.code-content {
    padding: 1.5rem;
    font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Roboto Mono', monospace;
    font-size: 0.875rem;
    line-height: 1.6;
}

.code-line {
    display: flex;
    align-items: center;
    margin-bottom: 0.5rem;
    min-height: 1.5rem;
}

.code-line:last-child {
    margin-bottom: 0;
}

.line-number {
    color: rgba(255, 255, 255, 0.3);
    margin-right: 1rem;
    min-width: 1.5rem;
    text-align: right;
    font-size: 0.8rem;
}

.code-text {
    color: var(--text-heading);
    flex: 1;
}

.prompt {
    color: #22d3ee;
    font-weight: 600;
}

.code-text.success {
    color: #10b981;
}

.highlight {
    color: #22d3ee;
    font-weight: 600;
}

/* Clean Process Timeline - Senior UX Design */
.clean-process {
    margin: 2.5rem 0;
    flex: 1;
    display: flex;
    flex-direction: column;
}

.process-timeline {
    position: relative;
    padding-left: 0;
}

.process-timeline::before {
    content: '';
    position: absolute;
    left: 8px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: linear-gradient(180deg, #1c73f4, rgba(28, 115, 244, 0.3), transparent);
}

.timeline-item {
    position: relative;
    margin-bottom: 1.25rem;
    padding-left: 2rem;
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
}

.timeline-item:last-child {
    margin-bottom: 0;
}

.timeline-dot {
    position: absolute;
    left: 0;
    top: 0.25rem;
    width: 16px;
    height: 16px;
    background: #1c73f4;
    border-radius: 50%;
    border: 3px solid #000000;
    box-shadow: 0 0 0 2px rgba(28, 115, 244, 0.3);
    z-index: 1;
}

.timeline-content {
    flex: 1;
    padding-top: 0.125rem;
}

.timeline-content h4 {
    font-size: 1rem;
    font-weight: 600;
    color: var(--text-heading);
    margin: 0 0 0.25rem 0;
    letter-spacing: -0.01em;
    line-height: 1.3;
}

.timeline-content p {
    font-size: 0.875rem;
    color: var(--text-muted-70);
    line-height: 1.4;
    margin: 0;
    font-weight: 400;
}

/* Hover effects for timeline items */
.timeline-item:hover .timeline-dot {
    background: #22d3ee;
    box-shadow: 0 0 0 2px rgba(34, 211, 238, 0.4);
    transform: scale(1.1);
}

.timeline-item:hover .timeline-content h4 {
    color: #22d3ee;
}

/* Responsive design */
@media (max-width: 768px) {
    .timeline-item {
        padding-left: 2rem;
        margin-bottom: 1.5rem;
    }
    
    .timeline-dot {
        width: 14px;
        height: 14px;
        top: 0.125rem;
    }
    
    .timeline-content h4 {
        font-size: 1rem;
    }
    
