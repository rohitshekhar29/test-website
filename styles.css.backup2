    }
    
    /* Features */
    .feature-card {
        padding: 1.25rem;
    }
    
    .feature-icon {
        width: 50px;
        height: 50px;
    }
    
    .feature-title {
        font-size: 1.1rem;
    }
    
    .feature-description {
        font-size: 0.9rem;
    }
    
    /* Pricing */
    .pricing-card {
        padding: 1.5rem 1rem;
    }
    
    .pricing-title {
        font-size: 1.25rem;
    }
    
    .pricing-price {
        font-size: 2rem;
    }
    
    .pricing-features li {
        font-size: 0.9rem;
    }
    
    /* Team Sections */
    .founding-team-section {
        margin: 1.5rem 0;
    }
    
    .founding-team-section .team-section-title {
        font-size: 1.2rem;
    }
    
    .team-description {
        font-size: 0.9rem;
    }
    
    .advisors-section {
        margin: 1rem 0;
    }
    
    .advisors-section h5 {
        font-size: 1.1rem;
    }
    
    .advisors-description {
        font-size: 0.9rem;
    }
    
    /* CTA Section */
    .cta-hero-title {
        font-size: 1.5rem;
    }
    
    .cta-hero-subtitle {
        font-size: 0.95rem;
    }
    
    .cta-card {
        padding: 1.25rem;
    }
    
    .card-title {
        font-size: 1.1rem;
    }
    
    .card-description {
        font-size: 0.9rem;
    }
    
    /* Contact Form */
    .contact-title {
        font-size: 2rem;
    }
    
    .contact-subtitle {
        font-size: 1rem;
    }
    
    .contact-form-container {
        padding: 1.5rem;
        margin: 0 0.5rem;
    }
    
    .form-row {
        grid-template-columns: 1fr;
        gap: 1rem;
    }
    
    .form-input,
    .form-textarea {
        padding: 0.75rem;
        font-size: 0.9rem;
    }
    
    /* Footer */
    .footer-container {
        padding: 2rem 1rem;
    }
    
    .footer-logo-text {
        font-size: 1.2rem;
    }
    
    .footer-description {
        font-size: 0.9rem;
    }
    
    .footer-heading {
        font-size: 1rem;
    }
    
    .footer-list li a {
        font-size: 0.9rem;
    }
}

/* Extra Small Mobile (320px and below) */
@media (max-width: 320px) {
    .hero {
        padding: 4rem 0 2rem 0;
    }
    
    .hero-title {
        font-size: 1.5rem;
    }
    
    .section-title {
        font-size: 1.25rem;
    }
    
    .contact-title {
        font-size: 1.75rem;
    }
    
    .cta-hero-title {
        font-size: 1.25rem;
    }
    
    .pricing-price {
        font-size: 1.75rem;
    }
}

/* Landscape Mobile */
@media (max-height: 500px) and (orientation: landscape) {
    .hero {
        padding: 3rem 0 1.5rem 0;
    }
    
    .hero-title {
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
    }
    
    .hero-description {
        font-size: 0.9rem;
        margin-bottom: 1rem;
    }
    
    .section {
        padding: 2rem 0;
    }
    
    video.hero-architecture-image {
        height: 250px;
    }
}

/* High DPI Displays */
@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
    .hero-visual img,
    .feature-icon img,
    .footer-logo img {
        image-rendering: -webkit-optimize-contrast;
        image-rendering: crisp-edges;
    }
}

/* Print Styles */
@media print {
    .nav,
    .footer,
    .hero-cta,
    .cta-section {
        display: none;
    }
    
    .hero,
    .section {
        padding: 1rem 0;
    }
    
    .hero-title,
    .section-title {
        color: black;
    }
    
    body {
        font-size: 12pt;
        line-height: 1.4;
    }
}

.comparison-service-tag {
    background: rgba(255, 255, 255, 0.1);
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.75rem;
    color: #f9fafb;
}

/* New Section */
.new-section {
    margin-top: 0.5rem;
}

/* Comparison Content Row */
.comparison-content-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.25rem 0;
    color: #d1d5db;
    font-size: 0.875rem;
}

.comparison-content-left {
    text-align: left;
    font-weight: 500;
}

.comparison-content-right {
    text-align: right;
    font-weight: 400;
    opacity: 0.8;
    color: #9ca3af;
}

.comparison-vertical-divider {
    width: 1px;
    background: #333;
    flex-shrink: 0;
}

/* Responsive adjustments */
@media (max-width: 768px) {
    .comparison-section {
        flex-direction: column;
        margin: 1rem;
        min-height: auto;
        border-radius: 12px;
        position: relative;
    }
    
    .comparison-mobile-tabs {
        display: flex;
        margin-bottom: 0;
    }
    
    .comparison-half {
        padding: 1rem;
        display: none;
    }
    
    .comparison-half.active {
        display: flex;
    }
    
    .comparison-vertical-divider {
        display: none;
    }
    
    .comparison-title {
        margin-bottom: 1rem;
    }
    
    .comparison-title-text {
        font-size: 1.25rem;
    }
    
    .comparison-bar-wrapper {
        margin-top: 0.5rem;
    }
    
    .comparison-content-row {
        padding: 0.5rem 0;
        font-size: 0.9rem;
    }
    
    .comparison-alert-box {
        margin-bottom: 1rem;
    }
}

@media (max-width: 575px) {
    .comparison-section {
        margin: 0.5rem;
        border-radius: 8px;
    }
    
    .comparison-mobile-tabs {
        padding: 0.25rem;
        gap: 0.25rem;
    }
    
    .comparison-tab-btn {
        padding: 0.5rem 0.75rem;
        font-size: 0.8rem;
    }
    
    .comparison-half {
        padding: 0.75rem;
    }
    
    .comparison-title-text {
        font-size: 1.1rem;
    }
    
    .comparison-content-row {
        padding: 0.4rem 0;
        font-size: 0.85rem;
    }
    
    .comparison-alert-box {
        padding: 0.5rem;
    }
}
