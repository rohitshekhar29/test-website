/* Product Section */
.product-section {
    padding: 2rem 0;
    background: transparent;
    position: relative;
    z-index: 1;
    overflow: hidden;
    margin: 2rem 0;
    border: 1px solid rgba(163, 163, 180, 0.1);
    border-radius: 0;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
}

.product-section .container {
    background: linear-gradient(135deg, #0a0a0a 0%, #0d1a2e 25%, #1a2a4a 50%, #1c3a5c 75%, #0a0a0a 100%);
    border: 2px solid rgba(255, 255, 255, 0.2);
    border-radius: 20px;
    position: relative;
    overflow: hidden;
    padding: 4rem 3rem;
    box-shadow: 0 0 0 1px rgba(255, 255, 255, 0.1);
    max-width: 1600px;
    margin: 0 auto;
    width: calc(100% - 4rem); /* Ensure proper spacing from edges */
}

.product-section .container::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
        linear-gradient(90deg, rgba(255, 255, 255, 0.03) 1px, transparent 1px),
        linear-gradient(rgba(255, 255, 255, 0.03) 1px, transparent 1px);
    background-size: 40px 40px;
    opacity: 0.5;
    pointer-events: none;
    border-radius: 20px;
}


/* Product Header */
.product-header {
    text-align: center;
    margin-bottom: 4rem;
    position: relative;
    z-index: 1;
    max-width: 1600px;
    margin-left: auto;
    margin-right: auto;
    padding: 2rem;
}

.product-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(28, 115, 244, 0.1);
    border: 1px solid rgba(28, 115, 244, 0.2);
    border-radius: 50px;
    padding: 0.5rem 1rem;
    margin-bottom: 1.5rem;
    font-size: 0.9rem;
    font-weight: 500;
    color: #22d3ee;
}

.badge-icon {
    font-size: 1rem;
}

.product-title {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 600;
    color: var(--text-heading);
    margin-bottom: 1.5rem;
    line-height: 1.1;
    letter-spacing: -0.02em;
}

.product-subtitle {
    font-size: 1.125rem;
    color: var(--text-muted-80);
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.6;
    font-weight: 400;
}

/* Product Features Grid */
.product-features {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
    margin-bottom: 5rem;
    position: relative;
    z-index: 1;
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
}

.feature-card {
    background: transparent;
    border: none;
    padding: 0;
    text-align: center;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}

.feature-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(28, 115, 244, 0.5), transparent);
    opacity: 0;
    transition: opacity 0.3s ease;
}

.feature-card:hover {
    transform: translateY(-4px);
    border-color: var(--border-primary);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
}

.feature-card:hover::before {
    opacity: 1;
}

.feature-card h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-heading);
    margin-bottom: 1rem;
    letter-spacing: -0.01em;
}

.feature-card p {
    color: var(--text-muted-60);
    line-height: 1.6;
    font-size: 0.95rem;
    font-weight: 400;
}

/* Product Showcase */
.product-showcase {
    position: relative;
    z-index: 1;
}

.showcase-tabs {
    display: flex;
    justify-content: center;
    gap: 0;
    margin-bottom: 4rem;
    background: transparent;
    border: none;
    border-radius: 0;
    padding: 0;
    max-width: 100%;
    margin-left: 0;
    margin-right: 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.showcase-tab {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    background: transparent;
    border: none;
    border-radius: 0;
    padding: 1.5rem 2rem;
    color: var(--text-muted-80);
    font-size: 1.4rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
    position: relative;
    flex: 0 0 auto;
    justify-content: flex-start;
    user-select: none;
    border-bottom: 3px solid transparent;
}

.showcase-tab:hover {
    background: transparent;
    color: var(--text-muted-80);
    transform: none;
}

.showcase-tab.active {
    background: transparent;
    color: var(--text-heading);
    box-shadow: none;
    border-bottom: 3px solid #1c73f4;
    font-weight: 700;
}

.showcase-tab.active::after {
    display: none;
}

.tab-icon {
    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    background: transparent;
    border-radius: 0;
    padding: 0;
}

.showcase-tab.active .tab-icon {
    background: transparent;
    color: var(--text-heading);
}

.tab-icon svg {
    width: 100%;
    height: 100%;
    stroke: currentColor;
}

.tab-text {
    font-weight: 500;
    letter-spacing: -0.01em;
    font-size: 1.1rem;
}

/* Showcase Content */
.showcase-content {
    position: relative;
}

.showcase-panel {
    display: none;
    animation: fadeInUp 0.6s ease;
}

.showcase-panel.active {
    display: block;
}

.panel-grid {
    display: grid;
    grid-template-columns: 1fr 1.4fr;
    gap: 3rem;
    align-items: center;
}

.panel-content {
    padding-right: 2rem;
}

.content-badge {
    display: inline-block;
    background: rgba(28, 115, 244, 0.1);
    color: var(--primary-blue);
    padding: 0.5rem 1rem;
    border-radius: 6px;
    font-size: 0.8rem;
    font-weight: 600;
    letter-spacing: 0.5px;
    margin-bottom: 1.5rem;
}

.panel-content h3 {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-heading);
    margin-bottom: 1rem;
    line-height: 1.3;
}

.panel-description {
    font-size: 1rem;
    color: var(--text-muted-80);
    line-height: 1.6;
    margin-bottom: 1.5rem;
}

/* Feature Highlights */
.feature-highlights {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}

.highlight-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
}

.highlight-icon {
    width: 40px;
    height: 40px;
    background: rgba(28, 115, 244, 0.1);
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;
    flex-shrink: 0;
}

.highlight-text strong {
    display: block;
    color: var(--text-heading);
    font-weight: 600;
    margin-bottom: 0.25rem;
}

.highlight-text span {
    color: var(--text-muted-70);
    font-size: 0.9rem;
